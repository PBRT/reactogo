@font-face
  font-family Sofia
  font-style normal
  src url(font/SofiaProLight.otf)

body, html
  font-family Sofia
  padding: 0
  margin: 0

input
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  outline: none
  border: none

textarea
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  outline: none
  border: none


a:hover, a:visited, a:link, a:active
  text-decoration: none
  color: inherit

.no-margin
  margin: 0px

.no-padding
  padding: 0px

@require "variables"
@require "components/modal"
@require "components/input"
@require "components/typography"
@require "components/button"
@require "components/spinner"
@require "components/slideout"

